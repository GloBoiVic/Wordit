{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "typeRoots": ["node_modules/@types", "./src/@types"],
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "skipLibCheck": true /* Skip type checking all .d.ts files. */
}
